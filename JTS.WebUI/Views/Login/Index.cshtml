@{
    Layout = null;
    ViewBag.Title = "KM企业快速开发框架";
}
@*<!DOCTYPE html><html lang="zh"> 使用这个出现了滚动条*@
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!--加载共通CSS-->
    <link href="~/Content/css/base.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link href="~/Content/css/btns/cssbtn.css" rel="stylesheet" />
    <style>
        .noscript { position: absolute; z-index: 100000; height: 2046px; top: 0px; left: 0px; width: 100%; background: white; text-align: center; }
        body { background: #dfdfdf; /*background-size: 100%; background: url(/Content/images/bg.jpg) no-repeat; color: #3b6e81;*/ }
        #login { width: 300px; height: auto; margin: 0 auto; margin-top: 100px; }
        #login_panel { margin-top: 20px; background: #FFF; width: 300px; border: 1px solid #CCC; overflow: hidden; -moz-border-radius: 8px; -webkit-border-radius: 8px; border-radius: 8px; -moz-box-shadow: 1px 1px 1px rgba(0,0,0,.2); -webkit-box-shadow: 1px 1px 1px rgba(0,0,0,.2); box-shadow: 1px 1px 1px rgba(0,0,0,.2); }
            #login_panel .inputbox { width: 230px; height: 34px; margin: 10px auto; }
            #login_panel input { width: 190px; height: 22px; line-height: 22px; border: 1px solid #ccc; padding: 5px 2px; }
            #login_panel .login_actions { background: #E8E8E8; width: auto; padding: 15px; border-top: 1px dotted #CCC; text-align: center; }
              
        .login_msg { width: 300px; height: auto; margin: 0 auto; margin-top: 20px; text-align: center; }
    </style>
    @*访问搜狐ip服务*@
    <script src="http://pv.sohu.com/cityjson?ie=utf-8"></script>
    @*<script src="http://int.dpool.sina.com.cn/iplookup/iplookup.php?format=js"></script>*@
</head>
<body>
    <noscript>
        <div class="noscript">
            <img src="~/Content/images/noscript.gif" alt="抱歉，请开启脚本支持！" />
        </div>
    </noscript>

    <div id="login">
        <img src="~/Content/images/km_logo_easyui.png" />
        <div id="login_panel">
            <div class="inputbox">
                账号&nbsp;&nbsp;<input type="text" id="UserCode" name="UserCode" value="" tabindex="1" placeholder="请输入账号" />
            </div>
            <div class="inputbox">
                密码&nbsp;&nbsp;<input type="password" id="Password" name="Password" value="" tabindex="2" placeholder="请输入密码" />
            </div>
            <div class="login_actions">
                <a href="javascript:void(0)" class="cssbtn cssbtn_size12 cssbtn_green" title="登入" style=" padding:8px 50px" onclick="doLogin();">登入</a>
            </div>
        </div>
    </div>
    <div class="login_msg"></div>
    <div style=" position:absolute; z-index:10; bottom:0px; width:100%; height:32px; line-height:32px; text-align:center; color:#808080">
        <span id="span_ip"></span>
    </div>
    <script src="~/Scripts/03jeasyui/jquery-easyui-1.4.4/jquery.min.js"></script>
    <!--加载公共脚本库-->
    <script src="~/Scripts/01core/utils.js"></script>
    <script src="~/Scripts/01core/json2.min.js"></script>
    <script src="~/Scripts/02jquery/jquery.cookie.js"></script>
    <script src="~/Scripts/02jquery/jqext.yxz.js"></script>
    <script src="~/Scripts/02jquery/layer/layer.js"></script>

    <link href="~/Scripts/02jquery/jnotify/jquery.jnotify.css" rel="stylesheet" />
    <script src="~/Scripts/02jquery/jnotify/jquery.jnotify.js"></script>

    <link href="~/Scripts/02jquery/showloading/showLoading.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/02jquery/showloading/jquery.showLoading.min.js"></script>
    <script src="~/Scripts/01core/common.js"></script>
    <script src="~/Scripts/app.login.js?v=999"></script>
</body>
</html>
